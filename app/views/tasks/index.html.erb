  <% @tasks.each do |task| %>
  <ul>
    <% if task.completed%>
    <li class="far fa-check-square"> <strong><%= task.title %></strong> - <%= task.details %></li>
    <%= link_to "details", task_path(task) %>
    <% else %>
    <li class="far fa-square"> <strong><%= task.title %></strong> - <%= task.details %></li>
    <%= link_to "details", task_path(task) %>
    <%end%>
  </ul>
  <% end %>

